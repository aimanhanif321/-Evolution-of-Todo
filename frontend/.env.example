# =============================================================================
# Taskora Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL
# Local development (Docker Compose or direct)
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Production (set to your domain)
# NEXT_PUBLIC_API_URL="https://api.taskora.example.com"

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Must match the backend BETTER_AUTH_SECRET
NEXT_PUBLIC_BETTER_AUTH_SECRET="your-super-secret-jwt-key-change-in-production"

# Session configuration
NEXT_PUBLIC_SESSION_TIMEOUT=1800  # 30 minutes in seconds

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable AI chatbot feature
NEXT_PUBLIC_ENABLE_AI_CHAT=true

# Enable dark mode
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# -----------------------------------------------------------------------------
# Dapr Configuration (Phase V - Optional)
# -----------------------------------------------------------------------------
# Dapr sidecar URL (when running with Dapr)
# NEXT_PUBLIC_DAPR_HTTP_ENDPOINT="http://localhost:3501"

# Enable Dapr service invocation for backend calls
NEXT_PUBLIC_USE_DAPR_INVOCATION=false

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN="taskora.example.com"

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Node environment (set automatically by Next.js)
# NODE_ENV=development
